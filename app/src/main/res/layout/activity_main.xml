<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_oldchild"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/contentBtn"
        android:padding="15dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnHelp"
            android:layout_weight="1"
            android:text="@string/btnHelp"
            android:textSize="25sp"
            android:background="@drawable/btnhelp"
            android:layout_margin="10dp"
            android:alpha="0.7"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnGps"
            android:layout_weight="1"
            android:text="@string/btnGps"
            android:textSize="25sp"
            android:background="@drawable/btngps"
            android:layout_margin="10dp"
            android:alpha="0.7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/contentBtn2"
        android:padding="15dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnQuery"
            android:layout_weight="1"
            android:text="@string/btnQuery"
            android:textSize="25sp"
            android:background="@drawable/btnquery"
            android:layout_margin="10dp"
            android:alpha="0.7"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnActi"
            android:layout_weight="1"
            android:text="@string/btnActi"
            android:textSize="25sp"
            android:background="@drawable/btnacti"
            android:layout_margin="10dp"
            android:alpha="0.7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="å®¶"
                android:background="#445CBB"
                android:textSize="20sp"
                android:id="@+id/setHome"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>